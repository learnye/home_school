.container {
  height: 100vh;
  width: 100vw;
}

/* 头部 */
.container-header {
  padding: 15px 10px;
  background: #fff;
  border-bottom: 1px solid #f4f4f4;
  justify-content: space-between;
  color: #959595;
}


.container-header .container-right {
  width: auto;
}


.container-header .container-right .center {
  margin-left: 15px;
  margin-right: 20px;
}

/* 列表 */
.container-list {
  align-items: center;
  padding-bottom: 60px;
  height: 100vh;
  width: 100vw;
}

.container-list .item {
  width: 100%;
  margin-top: 10px;
  padding: 15px 10px;
}

.container-list .item-my {
  justify-content: flex-end;
}

.container-list .item-my .right {
  margin-right: 10px;
}

.container-list .item .name {}


.container-list .item .right {
  margin-left: 10px;
  align-items: flex-start;
}


.container-list .item .content {
  font-size: 12px;
  margin-top: 10px;
  text-align: left;
  background: #fff;
  padding: 5px 10px;
  border-radius: 8px;
  max-width: 200px;
  min-width: 50px;
  text-align: left;
  text-overflow: ellipsis;
  word-wrap: break-word;

}

.container-list .item-my .content {
  background: rgb(64, 187, 15);
  color: #fff;
  text-align: right;
}

.container-list .item .coverImg {
  width: 40px;
  height: 40px;
  min-width: 40px;
  min-height: 40px;
  border-radius: 4px;
}

.container-list .item .icon-delete {
  width: 25px;
  height: 25px;
}



.container-list .item .icon-edit {
  width: 18px;
  height: 18px;
}

.container-list .item .right {
  width: auto;
  align-items: center;
  justify-self: flex-end;
}

.container-list .item-my .right {
  align-items: flex-end;
}




.container-list .item .icon-move:nth-child(2) {
  margin-left: 25px;
  margin-right: 30px;
}

.container-list .item .icon-move {
  width: 16px;
  height: 20px;
  padding: 5px;
}

.container-send {
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 15px;
  border-top: 1px solid #f4f4f4;
  align-items: flex-end;
  background: #f4f4f4;
}

.container-send .input-area {
  flex-grow: 1;
  padding: 4px 10px;
  background: #fff;
  border-radius: 4px;
  border: 1px solid #f4f4f4;
}

.container-send .btn-send {
  background: #0bb306;
  padding: 5px 15px;
  line-height: 20px;
  height: 20px;
  color: #fff;
  text-align: center;
  margin-left: 10px;
  border-radius: 4px;
}