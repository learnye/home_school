/* pages/classnoticeList/classnoticeList.wxss */
.container {
  height: 100%;
}

/* 头部 */
.container-header {
  padding: 15px 10px;
  background: #fff;
  border-bottom: 1px solid #f4f4f4;
  justify-content: space-between;
  color: #959595;
}


.container-header .container-right {
  width: auto;
}


.container-header .container-right .center {
  margin-left: 15px;
  margin-right: 20px;
}

/* 列表 */
.container-list {
  flex-grow: 1;
  align-items: center;
}

.container-list .item {
  width: 100%;
  background: #fff;
  margin-bottom: 1px;
  align-items: center;
  padding: 15px 10px;
  align-items: center;
}

.container-list .item .name {
  margin-left: 10px;
  margin-right: 10px;
  font-weight: bold;
}

.container-list .item .content {
  margin-left: 10px;
  margin-right: 10px;
  font-size: 10px;
  margin-top: 10px;
  width: 100%;
  text-align: left;
}

.container-list .item .coverImg {
  width: 100%;
  margin-left: 10px;
  margin-right: 10px;
  border-radius: 10px;
  margin-top: 10px;
}

.container-list .item .icon-delete {
  width: 25px;
  height: 25px;
}



.container-list .item .icon-edit {
  width: 18px;
  height: 18px;
}

.container-list .item .right {
  width: auto;
  align-items: center;
  justify-self: flex-end;
}

.container-list .item .icon-move:nth-child(2) {
  margin-left: 25px;
  margin-right: 30px;
}

.container-list .item .icon-move {
  width: 16px;
  height: 20px;
  padding: 5px;
}