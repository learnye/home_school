/* button默认样式去掉 */

.mybotton {
  border: none;
  box-sizing: content-box;
}

.mybotton::after {
  border: none;
}

.btn-red {
  padding: 10px 50px;
  background-color: #f40;
  border-radius: 8px;
  box-shadow: 3px 3px 8px #c1c1c1;
  color: #fff;
  text-align: center;
}

/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: #ffffff;
}

/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 0 rgba(255, 255, 255);
  border-radius: 10px;
  background-color: rgb(255, 255, 255);
}

/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 0 rgb(255, 255, 255);
  background-color: #ffffff;
}

/* 文字显示行数 */
.text-lines1 {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.text-lines2 {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 人民币符号 */
.rmb {
  font-size: 10px;
}

/* 操作按钮 */
.container-btn-bottom {
  justify-self: flex-end;
  width: 100%;
  height: 60px;
  min-height: 60px;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-top: 1px solid #f4f4f4;
}

.container-btn-bottom .btn {
  color: #fff;
  background: #E2BC67;
  border-radius: 4px;
  padding: 10px;
  width: 40%;
  text-align: center;
}


.container-btn-bottom .btn-done {
  color: rgb(106, 105, 109);
  background: rgb(222, 220, 231);
  border-radius: 4px;
  padding: 10px;
  width: 40%;
  text-align: center;
  margin-right: 10px;
}

/* 底部操作按钮-end */

/* 高度自适应 */
.height-auto {
  height: auto !important;
}

/* 图片展示 */
.container-imgs {
  flex-wrap: wrap;
}

.container-imgs .item {
  width: 80px;
  height: 80px;
  border-radius: 4px;
  position: relative;
}

.container-imgs .item .photo {
  width: 80px;
  height: 80px;
  min-width: 80px;
  min-height: 80px;
  border-radius: 4px;
}

.container-imgs .item .takePhoto {
  width: 70px;
  height: 70px;
  min-width: 70px;
  min-height: 70px;
}

.container-imgs .item .delete {
  width: 15px;
  height: 15px;
  position: absolute;
  right: -5px;
  top: -5px;
}

/* modal */
.container-modal {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 1000;
}

.container-modal .container-curtain {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background: #000000;
  z-index: 1001;
  opacity: 0.8;
}

.container-content {
  width: 100%;
  height: 100%;
  z-index: 1002;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}