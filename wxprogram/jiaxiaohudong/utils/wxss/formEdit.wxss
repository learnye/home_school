.container {
  height: 100%;
  align-items: center;
  background: #fff;
  color: #474948;
}

/* 中间内容 */
.container-content {
  flex-grow: 1;
  width: 92%;
}

.container-title {
  padding: 15px 15px 20px 15px;
  background: #fff;
  font-weight: bold;
  font-size: 18px;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #f4f4f4;
}

/* 表单项 */
.container-form-item {
  margin-top: 1px;
  background: #fff;
  height: 45px;
  align-items: center;
  border-bottom: 1px solid #f4f4f4;
}

.container-form-item .input {
  flex-grow: 1;
  padding: 10px;
}

.container-name .left-inputcount {
  justify-self: flex-end;
  font-size: 12px;
}

.container-form-item .arrow-right {
  width: 8px;
  height: 13px;
  justify-self: flex-end;
}

.container-form-imgs {
  align-items: flex-start;
  height: auto;
  border-bottom: none;
  padding: 10px 0;
}